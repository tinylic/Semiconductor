	\subsection{理想MIS结构C-V特性}
		\textbf{理想条件}\quad 假设在绝缘层中和绝缘层与半导体的界面不存在电荷，也不存在界面态，并且栅电压V=0时半导体中不存在电场，能带是平直的。
		$$\frac{1}{C} = \frac{1}{C_{ox}} + \frac{1}{C_S},C_{ox} = \frac{\varepsilon_{ox}}{d_{ox}}\mbox{为氧化层电荷，是常数}$$
		\subsubsection{积累}
			$$C_s = \frac{\varepsilon_s}{L_D} exp\left(-\frac{q V_s}{2 k_B T}\right) > > C_{ox} \Rightarrow C = C_{ox}$$
		\subsubsection{平带}
			$$C_{FBS} \approx \frac{\sqrt{2} \varepsilon_s}{L_D} \Rightarrow
			C = \frac{C_{ox}}{1 + \frac{\varepsilon_{ox}}{d_{ox}}\left(\frac{k_B T}{q^2 N_A \varepsilon_s}\right)^{1/2}}$$
		\subsubsection{耗尽}
			$$C_s \approx \frac{\varepsilon_s}{L_D} \sqrt{\frac{k_B T}{q V_s}} = \sqrt{\frac{q N_A \varepsilon_s}{2 V_s}}\Rightarrow
			C \approx \frac{C_{ox}}{1 + \sqrt{\frac{2 C_{ox} ^ 2}{q \varepsilon_s N_A}(V_G - V_{FB})}}$$
		\subsubsection{强反型}
			$$C_s \approx \frac{\varepsilon_s}{L_D}\sqrt{\frac{n_{p0}}{p_{p0}}}exp\left(\frac{q V_s}{2 k_B T}\right) >> C_{ox}\Rightarrow C = C_{ox}$$
		\begin {figure}[H]
			\centering
			\includegraphics[scale = 0.6]{Ch8Pic5.png}
			\caption{理想MIS C-V特性}
		\end {figure}
	\subsection{实际MIS结构C-V特性}
		\begin{itemize}
			\item	\textbf{功函数的影响}\quad	将图像向右平移$V_{ms}$
			\item	\textbf{平带电压的影响}\quad	将图像向右平移$V_{FB}$
			\item	\textbf{界面态的影响}\quad绝缘层和半导体界面处的电子能级称为界面态。能级处于禁带之中，是一个连续分布的界面态。\\
			$N_{ss}(E)$为界面态密度的分布函数。\\
			界面态电容与表面电容是并联的
			$$\frac{1}{C} = \frac{1}{C_{ox}} + \frac{1}{C_S + C_{Nss}}, C_{Nss} = q^2 N_{ss}(E)$$
		\end{itemize}
