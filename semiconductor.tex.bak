\section{半导体中载流子的统计分布}

\subsection{状态密度}
	\subsubsection{三维情况下的自由电子气}
		$$\varepsilon_{\vec{k}} = \frac{\hbar ^ 2}{2m} k ^ 2 = \frac{\hbar ^ 2}{2m}(k_x ^ 2 + k_y ^ 2 + k_z ^ 2),
			k_x,k_y,k_z = 0;\pm\frac{2\pi}{L};...;\pm\frac{2n\pi}{L}$$
		$$\mbox{每个量子态占据体积为}\frac{(2\pi)^3}{V}\quad\therefore\mbox{再考虑自旋，k空间能量状态密度为}\frac{2V}{(2\pi)^3}$$
	\subsubsection{状态密度}
		\begin{itemize}
			\item	为了描述能带电子状态的分布，引入态密度$g(E)$表示单位能量间隔内的状态数
			$$g(E) = \frac{dZ}{dE} = \frac{dZ}{d\Omega{*}} \frac{d\Omega^{*}}{dk} \frac{dk}{dE}$$
			\item	状态密度汇总
				\begin{itemize}
					\item	一维\quad	$L^{*} = 2k \rightarrow 2\left(\frac{L}{2\pi}dL^{*}\right) \rightarrow dZ = \frac{2L}{h}\sqrt{\frac{2m_n^{*}}{E - E_0}} dE$
							$$\rightarrow g(E) = \frac{2\pi}{h}\sqrt{\frac{2 m_n^{*}}{E - E_0}}$$
					\item	二维\quad	$S^{*} = \pi k^2 \rightarrow dZ = 2\left(\frac{L}{2\pi}\right) ^ 2 d S^{*}$
							$$\rightarrow g(E) = \frac{4 S \pi m_n^{*}}{h ^ 2}$$
					\item	三维\quad	$\Omega^{*} = \frac{4}{3} \pi k^3 \rightarrow dZ = \frac{2V}{(2\pi)^3}\frac{4\pi}{\hbar^3}(2m_n^{*})^{3/2}(E - E_0)^{1/2}dE $
					$$\rightarrow g(E) = \frac{4\pi V}{h^3}(2m_n^{*})^{3/2}\sqrt{E - E_0}$$
				\end{itemize}
			\item	状态密度有效质量
				\begin{itemize}
					\item	电子状态密度有效质量\quad导带极值在$\vec{k} = \vec{k_c}$,等能面为椭球面
							$$2m_{dn} ^ {3/2} = M(8m_x^{*}m_y^{*}m_z^{*})^{1/2} \Rightarrow m_{dn} = (M^2m_l^{*}m_t^{*2})^{1/3}$$
					\item	空穴状态密度有效质量\quad 重空穴与轻空穴在价带顶简并
							$$(m_{dV}^{*})^{3/2} = (m_{lh}^{3/2} + m_{hh}^{3/2}) \Rightarrow (m_{dV}^{*}) = (m_{lh}^{3/2} + m_{hh}^{3/2})^{2/3}$$
				\end{itemize}
		\end{itemize}

